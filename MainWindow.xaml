<Window x:Class="TaskForBro.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskForBro"
        mc:Ignorable="d"
        Title="MainWindow" Height="100" Width="200" Closing="Window_Closing">
    <StackPanel>
        <TextBlock Name="CounterTxb"/>
        <DockPanel>
            <TextBox Name="Amount" Text="0" MinWidth="150" KeyDown="Input_change"/>
            <StackPanel>
                <Button Content="+" Click="Increase_Click"/>
                <Button Content="-" Click="Decrease_Click"/>
            </StackPanel>
        </DockPanel>
        <Button Content="Рапечатать QR" Click="Button_Click"/>
    </StackPanel>
</Window>
